<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFD6601"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/consumo"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Consumo total R$:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/campoConsumo"
            android:layout_width="121dp"
            android:padding="3dip" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/couvert"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Couvert artÃ­stico R$:"
            android:textStyle="bold" />
        <EditText android:id="@+id/campoCouvert" android:padding="3dip"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/dividir"
            android:padding="3dip"
            android:text="Dividir conta por:"
            android:textStyle="bold" />
        <EditText android:id="@+id/campoDividir" android:padding="3dip"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/calcular"
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            android:text="Calcular conta final" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/taxa"
            android:padding="3dip"
            android:text="Taxa de servico(10%)R$"
            android:textStyle="bold" />
        <EditText android:id="@+id/campoTaxa" android:padding="3dip"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/conta"
            android:padding="3dip"
            android:text="Conta total R$:"
            android:textStyle="bold" />
        <EditText android:id="@+id/campoTotal" android:padding="3dip"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/valorP"
            android:padding="3dip"
            android:text="Valor por pessoa R$"
            android:textStyle="bold" />
        <EditText android:id="@+id/campoVPessoa" android:padding="3dip"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo_balaio" />
    </TableRow>

</TableLayout>